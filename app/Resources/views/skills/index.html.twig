{% extends 'tamplate.html.twig' %}

{% block body %}


    <table class="table">
        <thead>
            <tr>

                <th>Skill</th>
                <th>Pourcentage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>

                <td>{{ skill.skill }}</td>
                <td>{{ skill.pourcentage }}%</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('skills_delete', { 'id': skill.id }) }}">delete</a>
                        </li>
                        <li>
                            <a href="{{ path('skills_edit', { 'id': skill.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skills_new') }}">Create a new skill</a>
        </li>
    </ul>
{% endblock %}
